<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kmbeast.mapper.AddressMapper">

    <!--查询数据总项-->
    <select id="list" resultMap="BaseResultMap">

        SELECT id, user_id, detail, addressee, concat_phone, is_default, create_time
        FROM address d
        <where>
            <if test="userId != null">
                AND d.user_id = #{userId}
            </if>

            <if test="addressee != null and addressee != ''">
                AND d.addressee LIKE concat('%',#{addressee},'%')
            </if>

            <if test="isDefault != null">
                AND d.is_default = #{isDefault}
            </if>

        </where>

        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>

    </select>

    <!--满足分页条件的数据总项-->
    <select id="listCount" resultType="integer">

        SELECT COUNT(*)
        FROM address d
        <where>
            <if test="userId != null">
                AND d.user_id = #{userId}
            </if>

            <if test="addressee != null and addressee != ''">
                AND d.addressee LIKE concat('%',#{addressee},'%')
            </if>

            <if test="isDefault != null">
                AND d.is_default = #{isDefault}
            </if>

        </where>

    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kmbeast.pojo.entity.Address">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="detail" property="detail"/>
        <result column="addressee" property="addressee"/>
        <result column="concat_phone" property="concatPhone"/>
        <result column="is_default" property="isDefault"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

</mapper>
